<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="itmvu.litmus17.RegisterTechnovision">

    <LinearLayout
        android:layout_width="fill_parent"
        android:id="@+id/s1"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />
    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/s1"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorAccent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:textColor="#fff"
                android:background="#d50000"
                android:textSize="40sp"
                android:text="Register YourSelf For TechnoVision"
                android:gravity="center"
                android:id="@+id/m9"
                android:fontFamily="sans-serif-thin"
                />



            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:id="@+id/name1"
                android:background="@android:color/white"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/m9"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:background="@android:color/white"
                    android:padding="10dp"
                    android:layout_marginLeft="20dp"
                    android:hint="Team Leader Name"
                    android:layout_marginRight="20dp"
                    android:id="@+id/name"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:id="@+id/name21"
                android:background="@android:color/white"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/name1"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:background="@android:color/white"
                    android:padding="10dp"
                    android:layout_marginLeft="20dp"
                    android:hint="Team member 1 Name (Optional)"
                    android:layout_marginRight="20dp"
                    android:id="@+id/name2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:id="@+id/name31"
                android:background="@android:color/white"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/name21"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:background="@android:color/white"
                    android:padding="10dp"
                    android:layout_marginLeft="20dp"
                    android:hint="Team member 2 Name (Optional)"
                    android:layout_marginRight="20dp"
                    android:id="@+id/name3"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:id="@+id/name41"
                android:background="@android:color/white"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/name31"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:background="@android:color/white"
                    android:padding="10dp"
                    android:layout_marginLeft="20dp"
                    android:hint="Team member 3 Name (Optional)"
                    android:layout_marginRight="20dp"
                    android:id="@+id/name4"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:id="@+id/name51"
                android:background="@android:color/white"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/name41"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:background="@android:color/white"
                    android:padding="10dp"
                    android:layout_marginLeft="20dp"
                    android:hint="Team member 4 Name (Optional)"
                    android:layout_marginRight="20dp"
                    android:id="@+id/name5"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp" />

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="@android:color/white"
                android:layout_marginRight="20dp"
                android:layout_height="wrap_content"
                android:id="@+id/contactno1"
                android:layout_below="@+id/name51"
                >

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:background="@android:color/white"
                    android:id="@+id/contactno"
                    android:padding="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:hint="Contact No."
                    android:layout_marginTop="28dp"

                    android:layout_centerHorizontal="true" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="@android:color/white"
                android:layout_marginRight="20dp"
                android:id="@+id/email1"
                android:layout_height="wrap_content"
                android:layout_below="@+id/contactno1"
                >

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:background="@android:color/white"
                    android:id="@+id/email"
                    android:padding="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:hint="Email ID"
                    android:layout_marginTop="28dp"

                    android:layout_centerHorizontal="true" />

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="@android:color/white"
                android:layout_marginRight="20dp"
                android:layout_below="@+id/email1"
                android:layout_height="wrap_content"
                android:id="@+id/college1">
                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:background="@android:color/white"
                    android:padding="10dp"
                    android:layout_marginLeft="20dp"
                    android:hint="College Name"
                    android:layout_marginRight="20dp"
                    android:id="@+id/college"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="24dp" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="@android:color/white"
                android:layout_marginRight="20dp"
                android:layout_below="@+id/college1"
                android:layout_height="wrap_content"
                android:id="@+id/city1">
                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:background="@android:color/white"
                    android:padding="10dp"
                    android:layout_marginLeft="20dp"
                    android:hint="City"
                    android:layout_marginRight="20dp"
                    android:id="@+id/city2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="24dp" />

            </android.support.design.widget.TextInputLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/x4"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/card"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/city1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Select the Event for registration"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginLeft="10dp"

                    android:fontFamily="sans-serif-light"

                    android:id="@+id/text1"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner"
                    android:layout_below="@+id/text1"
                    android:layout_marginTop="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />


            </RelativeLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="20dp"
                android:padding="10dp"
                android:textColor="#fff"
                android:fontFamily="sans-serif-light"
                android:background="#d50000"
                android:id="@+id/submit"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/x4" />


        </RelativeLayout>

    </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>
